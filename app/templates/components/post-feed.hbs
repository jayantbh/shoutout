{{#if posts}}
    <ul class="post-feed col s12 m6 offset-m3">
		{{#each posts as |post|}}
            <li class="post-item">
				{{post-item post=post}}
            </li>
		{{/each}}
    </ul>
{{else}}
    <div class="center" style="width:100%;">
        <h5>No cookie for you.</h5>
        <h6>No shouts available.</h6>
    </div>
{{/if}}
{{yield}}
